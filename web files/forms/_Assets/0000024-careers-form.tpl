<div class="primary-top-border bg-light-gray mt-sm-4 mt-md-0 p-3 p-xl-4">
  <h3 class="text-uppercase my-3 text-center">Apply Now!</h3>
  <div class="form-group mt-4">
    <label class="font-weight-bold" for="prospect_fname">First Name <span class="text-primary">*</span></label> 
    <input type="text" name="prospect_fname" id="prospect_fname" class="form-control rounded-0 required w-100">
     <div class="invalid-feedback">Please Enter a First Name</div>
  </div>
  <div class="form-group mt-4">
    <label class="font-weight-bold" for="prospect_lname">Last Name <span class="text-primary">*</span></label> 
    <input type="text" name="prospect_lname" id="prospect_lname" class="form-control rounded-0 required w-100">
     <div class="invalid-feedback">Please Enter a Last Name</div>
  </div>
  <div class="form-group">
    <label class="font-weight-bold" for="email">Email <span class="text-primary">*</span></label> 
    <input type="text" name="email" id="email" class="form-control rounded-0 required w-100">
     <div class="invalid-feedback">Please Enter an Email</div>
  </div>
  <div class="form-group mt-3">
    <label class="font-weight-bold" for="address">Address <span class="text-primary">*</span></label> 
    <input type="text" name="address" id="address" class="form-control required rounded-0 w-100">
    <div class="invalid-feedback">Please Enter an Address</div>
  </div>
  <div class="form-group mt-3">
    <label class="font-weight-bold" for="phone">Phone <span class="text-primary">*</span></label> 
    <input type="text" name="phone" id="phone" class="form-control required rounded-0 w-100 mt-1">
     <div class="invalid-feedback">Please Enter a Phone Number</div>
  </div>
  <div class="form-group mt-3">
    <label class="font-weight-bold" for="position">Position applying for <span class="text-primary ">*</span></label> 
    <select name="position" id="position" class="form-control required">
      <option value="Select Position">Select Position</option>
      <option value="Director of Marketing">Director of Marketing</option>
      <option value="Accountant">Accountant</option>
      <option value="Rocket Scientist">Rocket Scientist</option>
      <option value="Web Designer">Web Designer</option>
      <option value="Salesman">Salesman</option>
      <option value="Project Manager">Project Manager</option>
    </select>
     <div class="invalid-feedback">Please Enter a Position</div>
  </div>
  <div class="form-group mt-3">
    <label class="font-weight-bold" for="upload_resume">Upload Resume <span class="text-primary">*</span></label> 
    <input aria-label="Resume Upload" type="file" name="upload_resume" id="upload_resume" class="required form-control-file rounded-0 w-100 mt-1 bg-transparent border-0 p-0">
     <div class="invalid-feedback">Please Enter a File</div>
  </div>
  <div class="text-center">
    <input type="submit" class="btn btn-primary btn-lg my-3" value="Send Application">
  </div>
</div>

<h2>Check Out Our Gear</h2>

<div class="row">
  [category_list id="7"] <!-- id may need to be updated --> <!-- id may need to be updated -->
    <div class="col-md-4 mt-3 mt-sm-4 ">
      <div class="bg-light text-center h-100">
        <a href="{{name}}/">
          <div class="h-100 w-100">
            <div class="h-200p overflow-hidden pt-1 px-1">
              <img class="w-100" alt="{{title}} Gear Image" src="[get_asset_file_url id={{category_image}}]">
            </div>
            <div class="p-3 font-secondary text-black">
              <h4 class="text-uppercase font-weight-bold">{{title}}</h4>
              <p>{{description}}</p>
            </div>
          </div>
        </a>
      </div>
    </div>
  [/category_list]
</div>